# GitInsight Backend Environment Configuration
# Copy this file to .env and fill in the values

# ============================================================================
# Required Configuration
# ============================================================================

# Google Gemini API Key (required for AI analysis)
GEMINI_API_KEY=your-gemini-api-key-here

# ============================================================================
# Optional Configuration (with defaults)
# ============================================================================

# GitHub Personal Access Token (optional, increases rate limits from 60 to 5000/hour)
GITHUB_TOKEN=your-github-token-here

# Rate limiting: requests per minute per IP (default: 10/minute)
RATE_LIMIT=10/minute

# Request timeout in seconds (default: 90)
REQUEST_TIMEOUT_SECONDS=90

# Maximum request body size in bytes (default: 1MB)
MAX_REQUEST_BODY_SIZE=1048576

# CORS allowed origins (comma-separated, default: localhost only)
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Cache TTL in seconds (default: 15 minutes)
CACHE_TTL_SECONDS=900

# Cache max size (default: 100 entries)
CACHE_MAX_SIZE=100

# ============================================================================
# Production Configuration (Render/Vercel)
# ============================================================================

# Frontend URL for CORS (required in production)
# Set this to your Vercel frontend URL (no trailing slash)
FRONTEND_URL=https://your-app.vercel.app

# Port for the server (Render sets this automatically)
PORT=10000
